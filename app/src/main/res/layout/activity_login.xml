<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_login_container"
        android:layout_width="257dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:fitsSystemWindows="false"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@drawable/shape_login_bg">

        <LinearLayout
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="23dp">
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:background="#cccccc">
            </View>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/choose_login_type"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textColor="#999999"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:background="#cccccc">
            </View>
        </LinearLayout>

        <!--<com.j13.zed.view.TextImgCenterBtn-->
            <!--android:id="@+id/btn_wechat_login"-->
            <!--android:layout_width="193dp"-->
            <!--android:layout_height="36dp"-->
            <!--android:layout_marginTop="38dp" />-->

        <com.j13.zed.view.TextImgCenterBtn
            android:id="@+id/btn_phone_login"
            android:layout_width="193dp"
            android:layout_height="36dp"
            android:layout_marginTop="23dp" />

        <!--<TextView-->
            <!--android:id="@+id/tv_xiaomi_login"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="@string/use_xiaomi_account"-->
            <!--android:layout_marginBottom="23dp"-->
            <!--android:layout_marginTop="38dp"-->
            <!--android:textColor="#999999"-->
            <!--android:textSize="12sp"/>-->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_login_loading"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:padding="13dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:visibility="gone"
        android:gravity="center_vertical">
        <ProgressBar
            android:id="@android:id/progress"
            style="@android:style/Widget.ProgressBar.Small.Inverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateDrawable="@drawable/loading_progressbar"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/loading"/>
    </LinearLayout>
</RelativeLayout>

